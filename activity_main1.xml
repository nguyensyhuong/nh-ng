<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="0"
        android:textSize="72sp"
        android:gravity="bottom|right"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="/"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_toLeftOf="@+id/btn1"
        android:layout_marginRight="10dp"
        android:text="9"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginLeft="20dp"
        android:text="7"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/btn4"
        android:layout_marginLeft="10dp"
        android:text="8"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="*"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_marginRight="10dp"
        android:text="6"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn4"
        android:layout_toLeftOf="@id/btn6"
        android:text="5"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn4"
        android:layout_marginLeft="20dp"
        android:text="4"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="-"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn6"
        android:layout_toLeftOf="@+id/btn9"
        android:layout_marginRight="10dp"
        android:text="3"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@id/btn10"
        android:text="2"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn8"
        android:layout_marginLeft="20dp"
        android:text="1"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn9"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="="
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn10"
        android:layout_toLeftOf="@+id/btn13"
        android:layout_marginRight="10dp"
        android:text="."
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn11"
        android:layout_toLeftOf="@id/btn14"
        android:text="0"
        android:textSize="45sp"></Button>
    <Button
        android:id="@+id/btn16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn12"
        android:layout_marginLeft="20dp"
        android:text="+/-"
        android:textSize="45sp"></Button>

</RelativeLayout>